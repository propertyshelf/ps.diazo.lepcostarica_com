<?xml version="1.0" encoding="UTF-8"?>
<rules xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
    xmlns:xi="http://www.w3.org/2001/XInclude">

  <rules css:if-content="#visual-portal-wrapper">
    <xi:include href="rules/rules.xml" />
    <!-- Use the theme template from index.html. -->
    <theme href="index.html" />
    <after css:theme-children="html head">
      <!-- Add custom stylesheet. -->
      <link rel="stylesheet" href="{$portal_url}/++theme++ps.diazo.lepcostarica_com/assets/css/custom.css" type="text/css" />
      <!-- Add custom JavaScript. -->
      <script src="{$portal_url}/++theme++ps.diazo.lepcostarica_com/assets/js/application.js" type="text/javascript"></script>
      <!--Include Google Fonts. -->
      <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,300' rel='stylesheet' type='text/css' />
    </after>
  </rules>

  <!-- CUSWEBDEV-684: Adjust listing details to show financial/legal tab as rates. -->
  <replace css:content="dt#fieldsetlegend-financial-information">
    <dt><xsl:copy-of select="attribute::*" />Rates</dt>
  </replace>

</rules>
